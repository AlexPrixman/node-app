<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>{{title}}</h4><a href="/notes/edit/{{_id}}"><i class="far fa-edit"></i></a>
                        <p>{{description}}</p>
                        <form action="/notes/delete-note/{{_id}}?_method=DELETE" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-outline-danger btn-block btn-sm w-100" type="submit">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto col-md-4">
            <div class="card-body">
            <h6>Hello {{user.name}}</h6>
                <p class="lead">There's no notes yet.</p>
                <a href="/notes/add" class="btn btn-outline-success w-100">Create One!</a>
            </div>
        </div>    
    {{/each}}
</div>