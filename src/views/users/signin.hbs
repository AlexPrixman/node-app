<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                Account Login
            </div>
            <img src="/img/Prixman_Corp.jpeg" class="rounded-circle mx-auto logo">
            <div class="card-body">
                <form action="/users/signin" method="post" class="eav-form">
                    <div class="form-group">
                        <input type="email" name="username" class="form-control" 
                        placeholder="Please enter your email." autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Please enter a password.">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-primary w-100">
                            Sign-In
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
